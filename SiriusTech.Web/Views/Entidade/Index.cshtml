@model IEnumerable<SiriusTech.Data.Models.Entidade>

@{
    ViewData["Title"] = "Entidade";
}

<h1>Entidades</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">  <i class="fa fa-plus-circle"></i> Novo Entidade</a>
</p>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CpfCnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DcrEntidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DcrEndereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdBairro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CpfCnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DcrEntidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DcrEndereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdBairro)
                </td>
                <td class="row">
                    <a asp-action="Edit" class="btn btn-primary m-1" asp-route-id="@item.IdEntidade"><i class="fa fa-edit"></i></a>
                    <a asp-action="Details" class="btn btn-success m-1" asp-route-id="@item.IdEntidade"><i class="fa fa-search"></i></a>

                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#DeleteModal-@item.IdEntidade">
                        <i class="fa fa-trash"></i>
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="DeleteModal-@item.IdEntidade" tabindex="-1" role="dialog" aria-labelledby="DeleteModallLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="DeleteModallLabel">Excluir Entidade</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Deseja realmente excluir o Entidade @item.DcrEntidade ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdEntidade">Sim</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }
            });

        });
    </script>
}

