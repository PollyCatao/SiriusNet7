@model SiriusTech.Data.Models.Entidade

@{
    ViewData["Title"] = "Edit";
}

<h1>Alterar dados do Entidade</h1>

<h4>Altere os dados abaixo</h4>
<hr />
<div>
    <a asp-action="Index" class="btn btn-primary"> <i class="fa fa-arrow-alt-circle-left"></i> Voltar</a>
</div>
<br />
<div class="row">
    <div class="col-md">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEntidade" />
            <div class="form-group">
                <label asp-for="CpfCnpj" class="control-label"></label>
                <input asp-for="CpfCnpj" class="form-control" />
                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DcrEntidade" class="control-label"></label>
                <input asp-for="DcrEntidade" class="form-control" />
                <span asp-validation-for="DcrEntidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DcrEndereco" class="control-label"></label>
                <input asp-for="DcrEndereco" class="form-control" />
                <span asp-validation-for="DcrEndereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCidade" class="control-label"></label>
                <input asp-for="IdCidade" class="form-control" />
                <span asp-validation-for="IdCidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdBairro" class="control-label"></label>
                <input asp-for="IdBairro" class="form-control" />
                <span asp-validation-for="IdBairro" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
